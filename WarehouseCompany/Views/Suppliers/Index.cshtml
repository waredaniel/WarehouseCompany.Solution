@{
  Layout = "_Layout";
}

@using WarehouseCompany.Models;

<h1> Suppliers List:</h1>

@if (@Model.Count == 0)
{
  <h3> Please add a Supplier </h3>
}

<ul>
  @foreach(Supplier supplier in Model)
  {
    <li>@Html.ActionLink($"{supplier.SupplierName}", "Details", new { id = supplier.SupplierId })</li>
  }
</ul>

<p>@Html.ActionLink("Add a new Supplier", "Create")</p>